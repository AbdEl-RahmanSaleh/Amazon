@model Amazon.Services.ProductService.Dto.ProductToReturnDto


<h1>Details</h1>

<div>
    <img src="~/Amazon.API/Files/productImages/@Model.PictureUrl" alt="@Model.PictureUrl" width="380px"/>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            PictureUrl
        </dt>
        <dd class = "col-sm-10">
            @Model.PictureUrl
        </dd>
        <dt class = "col-sm-2">
            QuantityInStock
        </dt>
        <dd class = "col-sm-10">
            @Model.QuantityInStock
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryName
        </dd>
        <dt class = "col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.BrandName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
