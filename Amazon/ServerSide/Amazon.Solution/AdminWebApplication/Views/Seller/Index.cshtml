@model IEnumerable<Amazon.Core.Entities.Identity.AppUser>

<h1>Sellers</h1>

<div class="bg-white p-4">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Display Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Seller Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">🗑️</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>